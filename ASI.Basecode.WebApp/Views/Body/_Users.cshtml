        $('#saveEditDetails').click(function () {
            const userId = $('#editUserId').val().trim();
            const userName = $('#editUserName').val().trim();
            const department = $('#editDepartment').val();
            const userTypeId = parseInt($('#editRoleName').val(), 10); // Get selected role ID

            console.log("User ID:", userId);
            console.log("UserType ID:", userTypeId);
            console.log("Department:", department);

            if (isNaN(userTypeId)) {
                console.error("Invalid userTypeId.");
                return;
            }

            let updatedData = {
                userId: userId,
                userName: userName,
                department: department,
                userTypeId: userTypeId
            };

            const password = $('#editUserPassword').val().trim();
            const confirmPassword = $('#confirmUserPassword').val().trim();
            if (password && password === confirmPassword) {
                updatedData.password = password;
            } else if (password && password !== confirmPassword) {
                alert("Passwords do not match.");
                return;
            }

            console.log("Data being sent to server:", updatedData);

            $.ajax({
                url: '/Account/UpdateUser',
                type: 'POST',
                data: updatedData,
                success: function (response) {
                    console.log("Server response:", response);
                    if (response.success) {
                        alert(response.message);
                        $('#editDetailsModal').modal('hide');
