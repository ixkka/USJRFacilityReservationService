<script>
    // jQuery to manage the modal title update and show events
    $(document).ready(function () {
        // Show modal when the 'Add User' button is clicked
        $('#addUserModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // Button that triggered the modal
            var title = button.data('title'); // Extract info from data-title attribute
            var modal = $(this);
            modal.find('#modalTitle').text(title); // Update the modal's title
            console.log('Modal shown with title: ' + title); // Debugging log
        });

        // When 'Delete User' is clicked, show the confirmation modal
        $('#confirmDelete').click(function () {
            console.log('User deleted!'); // Log when the user is deleted
            $('#deleteUserModal').modal('hide'); // Close the modal after deletion
        });
    });

    // Vanilla JS to manage dropdown menus for the three dots icons
    document.querySelectorAll('.menu-toggle').forEach(function (menuToggle) {
        menuToggle.addEventListener('click', function (event) {
            console.log('Three dots clicked'); // Debugging log

            const dropdown = this.nextElementSibling; // Get the next sibling (the dropdown)
            const isVisible = dropdown.style.display === 'block';

            // Log the state of the dropdown
            console.log('Dropdown is visible:', isVisible);

            // Toggle the display property of the dropdown menu
            dropdown.style.display = isVisible ? 'none' : 'block';

            // Log the new display state
            console.log('Dropdown new state:', dropdown.style.display);

            // Get the dropdown bounding box to check if it's overflowing
            const dropdownRect = dropdown.getBoundingClientRect();

            // Check if the dropdown is overflowing the right edge of the viewport
            if (dropdownRect.right > window.innerWidth) {
                // Align the dropdown to the left side if it's overflowing
                dropdown.style.left = 'auto';
                dropdown.style.right = '0';
                console.log('Dropdown aligned to the left due to overflow');
            } else {
                // Align the dropdown to the right side as default
                dropdown.style.left = '0';
                dropdown.style.right = 'auto';
                console.log('Dropdown aligned to the right');
            }

            // Prevent the click event from propagating, so it won't close the dropdown immediately
            event.stopPropagation();
        });
    });

    // Close dropdowns when clicking outside of them
    document.addEventListener('click', function (event) {
        console.log('Document clicked, checking to close dropdowns'); // Debugging log

        document.querySelectorAll('.dropdown-menu').forEach(function (dropdown) {
            const menuToggle = dropdown.previousElementSibling; // The three dots icon

            // If the click is outside the menu or the dropdown, hide the dropdown
            if (!menuToggle.contains(event.target) && !dropdown.contains(event.target)) {
                dropdown.style.display = 'none';
                console.log('Dropdown closed due to outside click');
            }
        });
    });
</script>

<script>
    $(document).ready(function() {
    $('.menu-toggle').on('click', function(e) {
        e.preventDefault();
        var menuId = $(this).data('menu-id');
        $('#' + menuId).toggle(); // Toggle the dropdown menu
    });

    // Close the dropdown when clicking outside
    $(document).on('click', function(e) {
        if (!$(e.target).closest('.dropdown').length) {
            $('.dropdown-menu').hide(); // Hide the dropdown if clicking outside
        }
    });

    // Handle click on "Edit details"
    $('.dropdown-item').on('click', function(e) {
        e.preventDefault();
        var url = $(this).data('url'); // Get the URL from data attribute
        if (url) {
            $.ajax({
                url: url,
                method: 'GET',
                success: function(response) {
                    // Assuming you have a modal to show the content
                    $('#yourModal .modal-content').html(response);
                    $('#yourModal').modal('show'); // Show the modal
                },
                error: function() {
                    alert('Failed to load the facility details.');
                }
            });
        }
    });
});

</script>

