<div id="chart" class="chart-container"></div>
<div class="x-axis" id="x-axis"></div>

<script>
    // Example data
    const chartData = [
        { label: "Jan", value: 120 },
        { label: "Feb", value: 200 },
        { label: "Mar", value: 150 },
        { label: "Apr", value: 80 },
        { label: "May", value: 170 },
    ];

    // Maximum value for scaling
    const maxValue = 300;

    // Function to render the chart
    function renderChart(data) {
        const chart = document.getElementById("chart");
        const xAxis = document.getElementById("x-axis");

        // Clear existing content
        chart.innerHTML = "";
        xAxis.innerHTML = "";

        // Loop through data to create bars and labels
        data.forEach(item => {
            // Create a bar
            const bar = document.createElement("div");
            bar.className = "bar";
            bar.style.height = `${(item.value / maxValue) * 100}%`;

            // Add a label above the bar
            const barLabel = document.createElement("span");
            barLabel.innerText = item.value;
            bar.appendChild(barLabel);

            // Append bar to the chart
            chart.appendChild(bar);

            // Create a label for the x-axis
            const xLabel = document.createElement("div");
            xLabel.innerText = item.label;
            xAxis.appendChild(xLabel);
        });
    }

    // Initial render
    renderChart(chartData);

    // Example: Update chart dynamically after 3 seconds
    setTimeout(() => {
        const newData = [
            { label: "Jun", value: 100 },
            { label: "Jul", value: 180 },
            { label: "Aug", value: 220 },
            { label: "Sep", value: 90 },
            { label: "Oct", value: 140 },
        ];
        renderChart(newData);
    }, 3000);
</script>

