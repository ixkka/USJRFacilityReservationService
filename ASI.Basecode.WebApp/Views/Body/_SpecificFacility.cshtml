<div class="analytics" style="margin-top: 80px; border-top: 1px solid #137301;">
    <div class="analytics-header" style="margin-top: 10px; display:flex; padding: 5px 15px; justify-content: space-between;">
        <h2>Booking</h2>
        <div style="display: flex;">
            <input type="date" style="height: 30px; width: 160px; border-radius: 10px; border: 1px solid gray" >
            <div style="height: 30px; width: 80px;background-color: lightgray; margin-left: 20px; border-radius: 10px; justify-content:space-between;">
                <button onclick="colorChange('header-1d')" id="header-1d" style="border: none; height: 30px; width: 37px; background-color: mediumseagreen; border-radius: 10px;">1d</button>
                <button onclick="colorChange('header-1w')" id="header-1w" style="border: none; height: 30px; width: 37px; background-color: lightgray; border-radius: 10px;">1w</button>
                <script>
                    function colorChange(active){
                        let button1 = document.getElementById('header-1d');
                        let button2 = document.getElementById('header-1w');

                        if(active === 'header-1d'){
                            button1.style.backgroundColor = 'mediumseagreen';
                            button2.style.backgroundColor = 'lightgray';
                        }
                        else if(active === 'header-1w'){
                            button1.style.backgroundColor = 'lightgray';
                            button2.style.backgroundColor = 'mediumseagreen';
                        }
                    }
                </script>
            </div>
        </div>
    </div>
    <div class="booking-body">
        <div style="border: 1px solid #137301; border-radius: 10px; width: 100%; min-height: 400px;">
         
        </div>
    </div>
    <hr style="border: .5px solid #137301;" />
    <div class="usage">
        <div class="usage-header" style="margin-top: 10px; display:flex; padding: 5px 15px; justify-content: space-between;">
            <h2>Usage Report</h2>
            <div style="display: flex;">
                <input type="date" style="height: 30px; width: 160px; border-radius: 10px; border: 1px solid gray">
                <div style="height: 30px; width: 80px;background-color: lightgray; margin-left: 20px; border-radius: 10px; justify-content:space-between; display: flex;">
                    <button id="usage-head-1w" style="border: none; height: 30px; width: 40px; background-color: mediumseagreen; border-radius: 10px;">1w</button>
                    <button id="usage-head-1m" style="border: none; height: 30px; width: 40px; background-color: lightgray; border-radius: 10px;">1m</button>
                    <button id="usage-head-1y" style="border: none; height: 30px; width: 40px; background-color: lightgray; border-radius: 10px;">1y</button>
                </div>
            </div>
        </div>
    </div>
    <div class="usage-body">
        <div style="border: 1px solid #137301; border-radius: 10px; width: 100%; min-height: 200px;">

    </div>
</div>
