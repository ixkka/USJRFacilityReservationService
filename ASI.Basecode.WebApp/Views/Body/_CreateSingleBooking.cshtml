@model ASI.Basecode.Services.ServiceModels.BookingViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<style>
    .clickable {
        cursor: pointer;
        border: 2px solid grey;
        color: grey
    }
    /* Add a bottom border to the clicked column */
    .clicked {
        border: 2px solid #137301;
        background-color: rgba(19, 115, 1, 0.3);
        color: #137301;
    }
    .add-btn {
        border: none;
        cursor: pointer;
        background-color: #137301;
        color: white
    }
    .cancel-btn {
        height: 2.5rem;
        width: 7rem;
        border: none;
        cursor: pointer;
        background-color: #8B8B8B;
        color: white
    }
</style>

<!--HEADER PART-->
<div class="container-fluid d-flex justify-content-between align-items-center" style="padding-bottom: 10px;">
    <div class="d-flex align-items-center" style="margin-left: -10px;">
        <div class="d-flex align-items-center" id="createBookingBackBTN" style="cursor:pointer; margin-right: 2rem;">
            <img src="~/img/arrow_back.svg" />
        </div>
        <div class="d-flex align-items-center" style="margin-right: 2rem">
            <h5 class="mb-0" style="font-size: 25px; font-weight:500;">Create Booking</h5>
        </div>
        <div class="d-flex justify-content-center align-items-center clickable clicked" style="padding: 7px; border-radius: 15px; margin-right: 1rem">
            Single Booking
        </div>
        <div class="d-flex justify-content-center align-items-center clickable" style="padding: 7px; border-radius: 15px; ">
            Recurring Booking
        </div>
    </div>
</div>

<div class="d-flex justify-content-center align-items-center" style="height: 100%; width: 100%;">
    <form asp-controller="Body" asp-action="CreateBooking" method="post">
        <!--Facility Name-->
        <div class="container" style="border-radius: 10px; margin-bottom: 10px">
            <label class="form-label" for="facility">Facility</label>
            <select id="facility" class="form-control" asp-for="FacilityId" onchange="updateFacilityName()">
                <option value="" disabled selected>Select Facility</option>
                @foreach(var facility in ViewBag.facilities)
                {
                    <option value="@facility.FacilityId" data-name="@facility.FacilityName">@facility.FacilityName</option>
                }
            </select>
            <input type="hidden" id="facilityName" asp-for="FacilityName" />
             @* <span asp-validation-for="Department" class="text-danger"></span> *@
        </div>
        

        <!--Booking Date-->
        <div class="container">
            <label for="Booking Date" class="form-label" style="margin: 0px;">Booking Date</label>
            <input asp-for="BookingDate" type="date" class="form-control" style="width: 25rem; border-radius: 10px; margin-bottom: 10px">
        </div>

        @* <!--End Date-->
        <div class="container">
            <label for="endDate" class="form-label" style="margin: 0px;">End Date</label>
            <input type="date" class="form-control" style="width: 25rem; border-radius: 10px; margin-bottom: 10px">
        </div> *@

        <!--Booking Hours-->
        <div class="container">
            <label for="bookingHours" class="form-label" style="margin: 0px;">Booking Hours</label>
            <div class="input-group" style="width: 25rem; margin-bottom: 10px">
                <input asp-for="BookingTimeStart" type="time" class="form-control" style="border-radius: 10px; margin-right: 20px;">
                <span class="input-group-text" style="border-radius: 10px; margin-right: 20px;">to</span>
                <input asp-for="BookingTimeEnd" type="time" class="form-control" style="border-radius: 10px; ">
            </div>
        </div>

        <!-- Notes Textarea -->
        <div class="container" style="margin-bottom: 30px">
            <label for="Notes" class="form-label" style="margin: 0px;">Notes</label>
            <textarea asp-for="Notes" class="form-control" rows="5" style="width: 25rem; border-radius: 10px;"></textarea>
        </div>

        <!-- Add and Cancel Button -->
        <div class="d-flex justify-content-between">
            <button type="submit" class="add-btn" style="border-radius: 10px; width: 48%;">Create</button>
            <button type="button" id="createBookingBackBTN" class="cancel-btn" style=" border-radius: 10px; width: 48%;">Cancel</button>
        </div>
    </form>
</div>

<script>
    $(document).on('click', '.clickable', function () {
        $('.clickable').removeClass('clicked');
        $(this).addClass('clicked');
    });

    $(document).on('click', '#createBookingBackBTN', function (e) {
        e.preventDefault();
        $.ajax({
            url: '/Body/Reservations',
            type: 'GET',
            success: function (data) {
                $('#main-content').html(data);
            },
            error: function () {
                alert('Failed to load the Facility details.');
            }
        });
    });
</script>

<script>
    $(document).ready(function () {
        // Initialize Bootstrap Select
        $('#facility').selectpicker();
    });
</script>

<script>
    $(document).on('change', '#facility', function () {
        var selectedOption = $(this).find(':selected');
        var facilityName = selectedOption.data('name'); // Use jQuery .data() to get the attribute
        $('#facilityName').val(facilityName); // Set the value of the input
    });
</script>