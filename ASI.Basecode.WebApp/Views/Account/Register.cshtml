

@using ASI.Basecode.Services.ServiceModels
@model UserViewModel
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Register Page";
}
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
<div class="container py-5 h-100 register-box">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="https://usjr.edu.ph/wp-content/uploads/2016/05/USJR1.png"
                                         style="width: 185px;" alt="logo">
                                </div>

                        <form method="post" action="/Account/Register" enctype="multipart/form-data">
                            <div class="form-outline mb-4">
                                <label class="form-label" for="userId">UserId</label>
                                <input type="text" id="userId" class="form-control" asp-for="UserId" placeholder="Enter userid" />
                                <span asp-validation-for="UserId" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label" for="name">Name</label>
                                <input type="text" id="name" class="form-control" asp-for="Name" placeholder="Enter name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label" for="password">Password</label>
                                <input type="password" id="password" class="form-control" asp-for="Password" placeholder="Enter password" minlength="8" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label" for="confirmpassword">Confirm Password</label>
                                <input type="password" id="confirmpassword" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <!-- Department Dropdown -->
                            <div class="form-outline mb-4">
                                <label class="form-label" for="department">Department</label>
                                <select id="department" class="form-control" asp-for="Department">
                                    <option value="" disabled selected>Select Department</option>
                                    <option value="SAO">SAO</option>
                                    <option value="SOE">SOE</option>
                                    <option value="SBM">SBM</option>
                                    <option value="SOEng">SOEng</option>
                                    <option value="SCS">SCS</option>
                                    <option value="SAMS">SAMS</option>
                                </select>
                                <span asp-validation-for="Department" class="text-danger"></span>
                            </div>

                            <!-- Profile Picture Upload -->
                            <div class="form-outline mb-4">
                                <label class="form-label" for="profilePicture">Profile Picture</label>
                                <input type="file" id="profilePicture" class="form-control" asp-for="ProfilePicture" />
                                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                            </div>

                            <div class="text-center pt-1 mb-5 pb-1 d-flex flex-column align-items-center">
                                <button class="btn btn-primary btn-block mb-2" type="submit" style="background-color: #137301; border-color: #137301;">
                                    Register
                                </button>
                                <a asp-controller="Account" asp-action="Login">
                                    &#8592 Back
                                </a>
                            </div>
                        </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
</div>
@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}
